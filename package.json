{
    "name": "react-workbench",
    "version": "0.0.1",
    "description": "React workbench",
    "author": "Jesse Chen",
    "keywords": [
        "typescript",
        "react"
    ],
    "repository": "github:jesseminn/react-workbench",
    "license": "ISC",
    "exports": {
        "./**/*": {
            "require": "./dist/**/*/index.js",
            "import": "./dist/**/*/index.js",
            "types": "./dist/**/*/index.d.ts"
        }
    },
    "files": [
        "./dist/**/*"
    ],
    "scripts": {
        "dev": "parcel index.html --port 3000",
        "build": "rm -rf ./dist && npx --yes tsc",
        "test": "jest",
        "test:watch": "jest --watch",
        "format": "prettier . --write --ignore-path .gitignore",
        "format:watch": "onchange \"**/*\" -- prettier {{changed}} --write --ignore-path .gitignore --ignore-unknown",
        "prepare": "npm run build"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.9",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.7",
        "onchange": "^7.1.0",
        "parcel": "^2.12.0",
        "prettier": "3.3.2",
        "process": "^0.11.10",
        "react-dom": "^18.3.1",
        "ts-jest": "^29.1.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.16.0",
        "typescript": "^5.5.2"
    },
    "peerDependencies": {
        "react": "^18.3.1",
        "ts-workbench": "jesseminn/ts-workbench"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    }
}
